{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react-jsx",
    "target": "es5",
    "module": "esnext",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": ["src/**/*", "node_modules"]
}
